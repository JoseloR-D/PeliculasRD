@model List<Movie>

@{
    Layout = "_Layout";
    ViewBag.Title = "Movies";
}

<div class="peliculas">
    @foreach (var movie in Model)
    {
    <a asp-action="Movie" asp-controller="Movie" asp-route-id="@movie.Id">
        <div class="pelicula">
            <img src="@movie.Path">
            <div class="nombrePelicula">@movie.Name</div>
        </div>
    </a>
    }
</div> 