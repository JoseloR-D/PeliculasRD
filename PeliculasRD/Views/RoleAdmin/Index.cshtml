@model IEnumerable<IdentityRole>

@{
    Layout = "_Layout";
    ViewBag.Title = "Roles";
}


<div class="admin">
    <h4>Roles</h4>
    <div class="validationDanger" asp-validation-summary="ModelOnly"></div>
    <table>

        @if (Model.Count() == 0)
        {
            <tr>
                <td>No Roles</td>
            </tr>
        }
        else
        {
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Users</th>
            </tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td identity-role="@role.Id"></td>
                    <td>
                        <form class="options" method="post" asp-action="Delete" asp-route-id="@role.Id">
                            <a class="submitButtom" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                            <button class="cancelButtom" type="submit">Delete </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
</div>

<a asp-action="Create" class="createButtom">Create</a>
