@model List<Movie>

@{
    Layout = "_Layout";
    ViewBag.Title = "Movies";
}

<div class="admin">
    <h4>Movies</h4>
    <div class="validationDanger" asp-validation-summary="ModelOnly"></div>
    <table>

        @if (Model.Count() == 0)
        {
            <tr>
                <td>No Movies</td>
            </tr>
        }
        else
        {
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Id</td>
                    <td>@movie.Name</td>
                    <td>
                        <form class="options" method="post" asp-action="Delete" asp-route-id="@movie.Id">
                            <a class="submitButtom" asp-action="Edit" asp-route-id="@movie.Id">Edit</a>
                            <button class="cancelButtom" type="submit">Delete </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
</div>

<a asp-action="Create" class="createButtom">Create</a>