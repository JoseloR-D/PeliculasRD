@model IEnumerable<AppUser>

@{ 
    Layout = "_Layout";
    ViewBag.Title = "Administration";
}

<div class="admin">
    <h4>User Accounts</h4>
    <table>

        @if(Model.Count() == 0){
            <tr>
                <td>No User Accounts</td>
            </tr>
        } else
        {
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
               @foreach(var user in Model)
               {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <form class="options" method="post" asp-action="Delete" asp-route-id="@user.Id">
                                <a class="submitButtom" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                <button class="cancelButtom" type="submit">Delete </button>
                            </form>
                        </td>
                    </tr>
               }
        }

    </table>
</div>